---
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="sv">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Jämför kurser mellan GY11 och GY25" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Poppins:wght@500;600;700&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>{title || "Kursplan Jämförelse"}</title>
    <ViewTransitions />
  </head>
  <body class="min-h-screen bg-gray-50 font-inter">
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --gy11-color: #3b82f6;
    --gy25-color: #10b981;
    --content-max-width: 65ch;
  }
  
  html {
    font-family: 'Inter', system-ui, sans-serif;
    background: #fafafa;
    background-size: 224px;
    margin: 0;
    width: 100%;
    height: 100%;
  }

  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Poppins', sans-serif;
  }

  .gy11-accent {
    color: var(--gy11-color);
  }

  .gy25-accent {
    color: var(--gy25-color);
  }

  .gy11-bg {
    background-color: var(--gy11-color);
  }

  .gy25-bg {
    background-color: var(--gy25-color);
  }

  .gy11-border {
    border-color: var(--gy11-color);
  }

  .gy25-border {
    border-color: var(--gy25-color);
  }

  /* Consistent styling for both GY11 and GY25 content */
  .prose {
    max-width: var(--content-max-width);
    margin: 0 auto;
  }

  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4 {
    color: #1a1a1a;
    margin-top: 2em;
    margin-bottom: 1em;
    line-height: 1.3;
  }

  .prose p {
    margin-bottom: 1.5em;
    line-height: 1.6;
  }

  .prose ul,
  .prose ol {
    margin-top: 1em;
    margin-bottom: 1em;
    padding-left: 1.5em;
  }

  .prose li {
    margin-bottom: 0.5em;
  }

  /* Ensure consistent bullet points */
  .prose ul li::marker {
    color: #4a5568;
  }

  /* Add spacing between sections */
  .prose > * + * {
    margin-top: 1.5em;
  }

  /* Style tables consistently if they appear in the content */
  .prose table {
    width: 100%;
    border-collapse: collapse;
    margin: 1em 0;
  }

  .prose th,
  .prose td {
    border: 1px solid #e2e8f0;
    padding: 0.75em;
    text-align: left;
  }

  /* Ensure consistent link styling */
  .prose a {
    color: #2563eb;
    text-decoration: underline;
  }

  .prose a:hover {
    color: #1d4ed8;
  }

  /* Add smooth transitions for the view transitions */
  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation-duration: 0.5s;
  }
</style>
